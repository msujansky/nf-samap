// nextflow.config

// ----------------------------------------------------------------------------
// Parameters
// ----------------------------------------------------------------------------
params {
    // ----- Control Flow -----
    run_id              = null
    publish_dir_mode    = 'copy'

    // ----- Input -----
    sample_sheet        = 'sample_sheet.csv'
    data_dir            = 'data'
    maps_dir            = null

    // ----- Output -----
    outdir              = 'out'
    results_dir         = 'results' // remove this after refactor
    work_dir            = 'work'

    // ----- Containers ------
    container_blast     = 'mdiblbiocore/samap-blast:latest'
    container_samap     = 'mdiblbiocore/samap:latest'
}

// ----------------------------------------------------------------------------
// Profiles
// ----------------------------------------------------------------------------

docker.enabled = true



profiles {
    test {
        process {
            cpus = 1
            memory = '8 GB'
            time = '10m'
        }
    }
    docker {
        docker.enabled         = true
        conda.enabled          = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
        docker.runOptions = '-u $(id -u):$(id -g) --platform=linux/amd64 -v $HOME:$HOME'

        process {
            withName: 'PREPROCESS' {
                cpus = 2
                memory = '4 GB'
                time = '4h'
            }   
            withName: 'RUN_BLAST_PAIR' {
                cpus = 64
                time = '24h'
            }
            withName: 'MERGE_MAPS' {
                cpus = 2
                time = '4h'
            }
            withName: 'LOAD_SAMS' {
                cpus = 4
                memory = '16 GB'
            }      
            //withName: 'BUILD_SAMAP' {
            //    cpus = 8
            //    time = '12h'
            //}   
            withName: 'RUN_SAMAP' {
                cpus = 32
                time = '12h'
            }   
            withName: 'VISUALIZE_SAMAP' {
                cpus = 16
                time = '8h'
            }     
        }
    }
    arm {
        docker.runOptions = '-u $(id -u):$(id -g) --platform=linux/amd64'
    }
    cluster {
        process {
            cpus = 8
            memory = '8 GB'
            time = '12h'
        }
    }

    worm {
        process {
            withName: 'PREPROCESS' {
                cpus = 2
                memory = '4 GB'
                time = '4h'
            }   
            withName: 'RUN_BLAST_PAIR' {
                cpus = 64
                time = '24h'
            }
            withName: 'MERGE_MAPS' {
                cpus = 2
                time = '4h'
            }
            withName: 'LOAD_SAMS' {
                cpus = 4
                memory = '16 GB'
            }      
            withName: 'BUILD_SAMAP' {
                cpus = 32
                time = '12h'
            }   
            withName: 'RUN_SAMAP' {
                cpus = 32
                time = '12h'
            }   
            withName: 'VISUALIZE_SAMAP' {
                cpus = 16
                time = '8h'
            }     
        }
    }

}
docker.registry      = 'docker.io'
// ----------------------------------------------------------------------------
// Process Defaults
// ----------------------------------------------------------------------------
process {
    withName: 'PREPROCESS' {
        publishDir = [
            path: { "${params.outdir}/preprocess" },
            mode: params.publish_dir_mode ?: 'copy',
            saveAs: { filename -> filename == 'versions.yml' ? null : filename }
        ]
        container = params.container_blast
    }   
    withName: 'RUN_BLAST_PAIR' {
        publishDir = [
            path: { "${params.outdir}/blast" },
            mode: params.publish_dir_mode ?: 'copy',
            saveAs: { filename -> filename == 'versions.yml' ? null : filename }
        ]
        container = params.container_blast
    } 
    withName: 'MERGE_MAPS' {
        publishDir = [
            path: { "${params.outdir}/merge" },
            mode: params.publish_dir_mode ?: 'copy',
            saveAs: { filename -> filename == 'versions.yml' ? null : filename }
        ]
        container = params.container_blast
    }
    withName: 'LOAD_SAMS' {
        publishDir = [
            path: { "${params.outdir}/load_sams" },
            mode: params.publish_dir_mode ?: 'copy',
            saveAs: { filename -> filename == 'versions.yml' ? null : filename }
        ]
        container = params.container_samap
    }      
    withName: 'BUILD_SAMAP' {
        publishDir = [
            path: { "${params.outdir}/build_samap" },
            mode: params.publish_dir_mode ?: 'copy',
            saveAs: { filename -> filename == 'versions.yml' ? null : filename }
        ]
        container = params.container_samap
    }   
    withName: 'RUN_SAMAP' {
        publishDir = [
            path: { "${params.outdir}/run_samap" },
            mode: params.publish_dir_mode ?: 'copy',
            saveAs: { filename -> filename == 'versions.yml' ? null : filename }
        ]
        container = params.container_samap
    }   
    withName: 'VISUALIZE_SAMAP' {
        publishDir = [
            path: { "${params.outdir}/vis" },
            mode: params.publish_dir_mode ?: 'copy',
            saveAs: { filename -> filename == 'versions.yml' ? null : filename }
        ]
        container = params.container_samap
    }   
}
