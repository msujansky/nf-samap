{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/scscape/master/assets/schema_input.json",
    "title": "nf-core/scscape pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "meta": ["id"]
            },
            "annotation": {
                "type": "string",
                "meta": ["annotation"]
            },
            "type": {
                "type": "string",
                "meta": ["type"]
            },
            "id2": {
                "type": "string",
                "meta": ["id2"]
            },
            "h5ad": {
                "type": "string",
                "format": "file-path"
            },
            "fasta": {
                "type": "string",
                "format": "file-path"
            }
        },
        "required": ["id", "h5ad", "fasta"]
    }
}
